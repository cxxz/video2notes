# Video2Notes Environment Configuration
# Copy this file to .env and fill in your actual values

# ==========================================
# REQUIRED SETTINGS
# ==========================================

# Hugging Face Token (Required)
# Used for Whisper transcription models and speaker diarization
# Get your token from: https://huggingface.co/settings/tokens
HF_TOKEN=hf_your_token_here

# ==========================================
# OPENAI API SETTINGS (Optional)
# ==========================================

# OpenAI API Key (for note refinement with GPT models)
OPENAI_API_KEY=sk-your-openai-api-key-here

# OpenAI Base URL (for Azure OpenAI or custom endpoints)
# Leave empty for standard OpenAI API
# Example for Azure: https://your-resource.openai.azure.com/
OPENAI_BASE_URL=

# OpenAI API Version (for Azure OpenAI)
# Example: 2024-02-15-preview
OPENAI_API_VERSION=

# ==========================================
# ANTHROPIC API SETTINGS (Optional)
# ==========================================

# Anthropic API Key (for note refinement with Claude models)
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key-here

# ==========================================
# AWS BEDROCK SETTINGS (Optional)
# ==========================================

AWS_ACCESS_KEY_ID=your-aws-access-key-id
AWS_SECRET_ACCESS_KEY=your-aws-secret-access-key
AWS_DEFAULT_REGION=us-west-2

# ==========================================
# APPLICATION SETTINGS (Optional)
# ==========================================

# Flask Secret Key (for web application sessions)
# Generate a random string for production use
FLASK_SECRET_KEY=your-flask-secret-key-here

# Upload directory for video files
# Default: /tmp/video2notes_uploads
UPLOAD_FOLDER=/tmp/video2notes_uploads

# Default model for note refinement
# Options: openai/gpt-4o, bedrock/claude-4-sonnet, etc.
DEFAULT_REFINEMENT_MODEL=bedrock/claude-4-sonnet

# Default Whisper model for transcription
# Options: large-v3, large-v2, medium, small, base, tiny
DEFAULT_WHISPER_MODEL=large-v3

# ==========================================
# ADVANCED SETTINGS (Optional)
# ==========================================

# Maximum file size for uploads (in bytes)
# Default: 2GB = 2147483648 bytes
MAX_UPLOAD_SIZE=2147483648

# Log level for the application
# Options: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

# Number of worker threads for processing
# Default: 4
WORKER_THREADS=4

# ==========================================
# NETWORK SETTINGS (Optional)
# ==========================================

# Main application port
APP_PORT=5001

# Slide selector port
SLIDE_SELECTOR_PORT=5002

# Speaker labeler port
SPEAKER_LABELER_PORT=5006

# Host binding (0.0.0.0 for all interfaces, 127.0.0.1 for localhost only)
APP_HOST=0.0.0.0

# ==========================================
# USAGE INSTRUCTIONS
# ==========================================
#
# 1. Copy this file to .env:
#    cp .env.sample .env
#
# 2. Edit .env with your actual values:
#    nano .env
#
# 3. At minimum, set HF_TOKEN for basic functionality
#
# 4. Set OpenAI/Anthropic/AWS keys if you want AI-powered note refinement
#
# 5. Never commit .env to version control (it's in .gitignore)
#
